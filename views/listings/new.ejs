<% layout("/layouts/boilerplate") %>

   <div class="row mt-3">
    <div class="col-8 offset-2">
<br><br><br>
        <h2>Create a new listing</h2> <br>
        <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-4">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" id="" placeholder="Enter a appealing Title" class="form-control" required>

                <div class="valid-feedback">Title Looks Good</div>
                 <div class="invalid-feedback">Enter a title</div>
            </div>
            

            <div class="mb-4">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" id="" placeholder="enter description"
                    class="form-control" required></textarea>

                     <div class="invalid-feedback">Please Enter a short description</div>
            </div>
            

            
             <div class="mb-4">
                <label for="image" class="form-label">Upload Image</label>
                <input type="file" name="listing[image][url]" id="" class="form-control" required>
            </div>
            
            <div class="row">
                <div class="mb-4 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input  name="listing[price]" id="" placeholder="1200" class="form-control" required>

                <div class="invalid-feedback">Eneter a valid price</div>

            </div>
            

            <div class="mb-4 col-md-8">
                <label for="country " class="form-label">Country</label>
                <input type="text" name="listing[country]" id="" placeholder="India" class="form-control" required>

                 <div class="invalid-feedback">Country should be valid!!</div>

            </div>
            </div>

            
            

            <div class="mb-4">
                <label for="location" class="form-label">location</label>
                <input type="text" name="listing[location]" id="" placeholder="Mumbai" class="form-control" required>

                 <div class="invalid-feedback">Location should be valid!!</div>
            </div>
            
            <button class="btn btn-dark list-btn">LIST</button>
        </form>
        <br><br><br>
    </div>
    </div>